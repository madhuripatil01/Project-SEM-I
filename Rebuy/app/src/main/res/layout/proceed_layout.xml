<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a shipping address"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:id="@+id/txt_shipAdd"/>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtProBuyerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Customer Full name" />


        <EditText
            android:id="@+id/edtProcBuyermob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Mobile number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edtProcBuyerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Address" />

        <TextView
            android:id="@+id/txtProcBuyerdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Date"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txtProctotalBuyerprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="total Price"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtshowprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Information"
        android:id="@+id/txt_payinfo"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textColor="#000000"
                android:id="@+id/txt_paymethod"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery"
                android:textSize="15dp"
                android:id="@+id/txt_pay"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:textSize="20dp"
        android:id="@+id/btn_proceed"
        android:layout_marginTop="30dp"
        android:background="#030F68"
        android:textColor="#ffffff"
        android:layout_gravity="center"/>

</LinearLayout>

