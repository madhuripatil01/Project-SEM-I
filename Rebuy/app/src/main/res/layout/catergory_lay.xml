<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background3"
    android:orientation="vertical"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewFurniture"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginVertical="100dp"
        android:layout_marginLeft="7dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/furimg"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/furniture" />


        <TextView
            android:id="@+id/txtfurniture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Furniture"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewVehicle"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="100dp"
        android:layout_marginLeft="7dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/Docimg"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/vehicle" />


        <TextView
            android:id="@+id/txtvehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Vehicle"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewElectronic"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginVertical="380dp"
        android:layout_marginLeft="7dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/Bookid"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/electronics" />


        <TextView
            android:id="@+id/txtbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Electronic"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewBook"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginHorizontal="210dp"
        android:layout_marginVertical="380dp"
        android:layout_marginLeft="7dp"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/Eletricimg"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/books" />


        <TextView
            android:id="@+id/txtElectronic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:text="Book"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>


    </androidx.cardview.widget.CardView>


</RelativeLayout>


